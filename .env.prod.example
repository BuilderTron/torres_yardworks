# --- Django Core ---------------------------------------------------------------
# Generate a unique key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=change-me-to-a-real-secret-key

# MUST be False in production
DEBUG=False

# Comma-separated list of domains that Django will serve
ALLOWED_HOSTS=torresyardworks.com,www.torresyardworks.com

# Comma-separated scheme + domain entries that Django accepts for CSRF (required behind a reverse proxy)
CSRF_TRUSTED_ORIGINS=https://torresyardworks.com,https://www.torresyardworks.com

# --- Database ------------------------------------------------------------------
# Directory where the SQLite database file is stored (inside the container)
DATABASE_DIR=/app/data

# --- Email (Gmail SMTP) -------------------------------------------------------
EMAIL_HOST_USER=torresyardworks@gmail.com
EMAIL_HOST_PASSWORD=change-me-to-app-password

# --- Security Hardening -------------------------------------------------------
# These require HTTPS (Caddy handles TLS automatically)
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# HSTS: tell browsers to only use HTTPS for this domain (31536000 = 1 year)
SECURE_HSTS_SECONDS=31536000

# --- Logging -------------------------------------------------------------------
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=WARNING
